{
  "info": {
    "name": "TweetSpace Social Network API",
    "description": "Complete API collection for testing TweetSpace endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/M01046675",
